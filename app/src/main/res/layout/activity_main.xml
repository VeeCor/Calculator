<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Input_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="40dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/num_pad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <TextView
            android:id="@+id/LastHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/trying"
            android:textAlignment="textEnd"
            android:textColor="@color/light_gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Inputing_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/default_value"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num_pad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/first_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="105dp"
            android:minHeight="95dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/button_ac"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_AC"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:rotationY="180"
                android:text="@string/Button_C"
                android:textAlignment="center"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_div"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sec_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="105dp"
            android:minHeight="95dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_1"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_2"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button3"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_3"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_multiplication"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_multiplication"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="105dp"
            android:minHeight="95dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_4"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button5"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_5"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button6"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_6"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_minus"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="105dp"
            android:minHeight="95dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_7"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button8"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_8"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button9"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_9"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_plus"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="105dp"
            android:minHeight="95dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_0"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_dot"
                android:textAlignment="center"
                android:textSize="40sp"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_red"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxHeight="105dp"
                android:minHeight="95dp"
                android:text="@string/Button_equals"
                android:textAlignment="center"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>